{
  "description": "CLI schema for VQC classification experiments.",
  "arguments": [
    {
      "flags": ["-c", "--config"],
      "help": "Path to JSON config file to merge with defaults",
      "type": "path",
      "default": null,
      "apply": {"kind": "config_file"}
    },
    {
      "flags": ["--seed"],
      "help": "Random seed",
      "type": "int",
      "default": null,
      "apply": {"kind": "config_path", "path": "seed"}
    },
    {
      "flags": ["--outdir"],
      "help": "Base output directory",
      "type": "path",
      "default": null,
      "apply": {"kind": "config_path", "path": "outdir"}
    },
    {
      "flags": ["--model-type"],
      "help": "Experiment model type",
      "type": "str",
      "choices": ["vqc", "vqc_100", "vqc_111", "mlp_wide", "mlp_deep", "svm_lin", "svm_rbf"],
      "default": null,
      "apply": {"kind": "config_path", "path": "experiment.model_type"}
    },
    {
      "flags": ["--device"],
      "help": "Torch device string",
      "type": "str",
      "default": null,
      "apply": {"kind": "config_path", "path": "device"}
    },
    {
      "flags": ["--visualize-data"],
      "help": "Force dataset scatter plots",
      "action": "store_true",
      "default": false,
      "apply": {"kind": "config_path", "path": "data.visualize", "value": true}
    },
    {
      "flags": ["--skip-boundaries"],
      "help": "Skip decision boundary plots",
      "action": "store_true",
      "default": false,
      "apply": {"kind": "config_path", "path": "outputs.save_decision_boundaries", "value": false}
    },
    {
      "flags": ["--log-wandb"],
      "help": "Enable Weights & Biases logging regardless of config",
      "action": "store_true",
      "default": false,
      "apply": {"kind": "config_path", "path": "logging.log_wandb", "value": true}
    }
  ]
}
