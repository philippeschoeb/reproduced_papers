{
  "description": "CLI schema for Quantum Gaussian kernel experiments.",
  "arguments": [
    {
      "flags": ["-c", "--config"],
      "help": "Path to JSON config file to merge with defaults",
      "type": "path",
      "default": null,
      "apply": {"kind": "config_file"}
    },
    {
      "flags": ["--task"],
      "help": "Experiment task to run",
      "type": "str",
      "choices": ["sampler", "classify"],
      "default": null,
      "apply": {"kind": "config_path", "path": "experiment.task"}
    },
    {
      "flags": ["--seed"],
      "help": "Random seed",
      "type": "int",
      "default": null,
      "apply": {"kind": "config_path", "path": "seed"}
    },
    {
      "flags": ["--outdir"],
      "help": "Base output directory",
      "type": "path",
      "default": null,
      "apply": {"kind": "config_path", "path": "outdir"}
    },
    {
      "flags": ["--device"],
      "help": "Torch device string",
      "type": "str",
      "default": null,
      "apply": {"kind": "config_path", "path": "device"}
    },
    {
      "flags": ["--manifest"],
      "help": "Checkpoint manifest to use for classification runs",
      "type": "path",
      "default": null,
      "apply": {"kind": "config_path", "path": "classification.manifest"}
    },
    {
      "flags": ["--checkpoint-dir"],
      "help": "Directory for storing sampler checkpoints",
      "type": "path",
      "default": null,
      "apply": {"kind": "config_path", "path": "sampler.checkpoint_dir"}
    },
    {
      "flags": ["--num-runs"],
      "help": "Number of runs per photon count during sampling",
      "type": "int",
      "default": null,
      "apply": {"kind": "config_path", "path": "training.num_runs"}
    }
  ]
}
