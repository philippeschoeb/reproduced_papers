{
  "description": "Default configuration for HQNN spiral experiments",
  "seed": 42,
  "device": "cpu",
  "outdir": "outdir",
  "logging": {
    "level": "info"
  },
  "dataset": {
    "name": "spiral",
    "num_instances": 1875,
    "num_classes": 3,
    "feature_grid": [5, 10],
    "test_size": 0.2,
    "batch_size": 64
  },
  "model": {
    "accuracy_threshold": 90.0,
    "repetitions": 5,
    "binning": "linear",
    "embedding": "learned",
    "init": "none"
  },
  "training": {
    "epochs": 25,
    "lr": 0.05
  },
  "results": {
    "filename": "HQNN_MM_bs{batch_size}_lr{lr}.json",
    "make_threshold_figure": false,
    "threshold_figure_name": "threshold_params.png"
  }
}
