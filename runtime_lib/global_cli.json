{
  "description": "Global CLI schema shared by every reproduction.",
  "arguments": [
    {
      "flags": ["-c", "--config"],
      "help": "Path to JSON config file to merge with defaults",
      "type": "path",
      "dest": "config",
      "default": null,
      "apply": {"kind": "config_file"}
    },
    {
      "flags": ["--outdir"],
      "help": "Base output directory",
      "type": "path",
      "default": null,
      "apply": {"kind": "config_path", "path": "outdir"}
    },
    {
      "flags": ["--seed"],
      "help": "Random seed applied before running the experiment",
      "type": "int",
      "default": null,
      "apply": {"kind": "config_path", "path": "seed"}
    },
    {
      "flags": ["--dtype"],
      "help": "Torch/NumPy dtype override (e.g., float32, float64, bfloat16)",
      "type": "str",
      "default": null,
      "apply": {"kind": "config_path", "path": "dtype"}
    },
    {
      "flags": ["--device"],
      "help": "Device string (cpu, cuda:0, mps)",
      "type": "str",
      "default": null,
      "apply": {"kind": "config_path", "path": "device"}
    },
    {
      "flags": ["--log-level"],
      "help": "Logging verbosity for the shared runner",
      "type": "str",
      "choices": ["debug", "info", "warning", "error", "critical"],
      "default": null,
      "apply": {"kind": "config_path", "path": "logging.level"}
    }
  ]
}
