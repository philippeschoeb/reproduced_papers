{
  "description": "Default config for Gaussian kernel sampler/classifier reproduction (Algorithm 2).",
  "experiment": {
    "task": "sampler"
  },
  "outdir": "results",
  "seed": 1337,
  "device": "cpu",
  "model": {
    "circuit": "general",
    "train_circuit": true,
    "scale_type": "learned",
    "no_bunching": false
  },
  "training": {
    "num_runs": 1,
    "epochs": 100,
    "batch_size": 32,
    "learning_rate": 0.02,
    "betas": [
      0.7,
      0.9
    ],
    "weight_decay": 0.0,
    "optimizer": "adam",
    "shuffle_train": true
  },
  "sampler": {
    "photons": [
      2,
      4,
      6,
      8,
      10
    ],
    "grid": {
      "step": 0.05,
      "span": 3.141592653589793,
      "center": 0.0,
      "sigmas": [
        1.0,
        0.5,
        0.33,
        0.25
      ]
    }
  },
  "classification": {
    "manifest": "models/gaussian_kernels/manifest.json",
    "data": {
      "num_samples": 200,
      "test_size": 0.4,
      "scaling_factor": 0.65,
      "cache_dir": "data/cache/classification",
      "datasets": {
        "circular": {
          "noise": 0.05
        },
        "moon": {
          "noise": 0.2
        },
        "blob": {
          "cluster_std": 4.0
        }
      }
    }
  }
}
