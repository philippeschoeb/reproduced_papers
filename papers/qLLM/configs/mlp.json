{
  "description": "Multi-Layer Perceptron configuration - tests multiple hidden dimensions.",
  "seed": 42,
  "device": "auto",
  "outdir": "results",
  "logging": {
    "level": "info"
  },
  "dataset": {
    "name": "sst2",
    "eval_size": 250,
    "embeddings_dir": "embeddings"
