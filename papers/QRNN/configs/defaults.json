{
    "description": "Default parameters for QRNN reproduction",
    "seed": 42,
    "dtype": "float32",
    "outdir": "outdir",
    "device": "cpu",
    "dataset": {
        "name": "weather_prediction",
        "path": "szeged-weather.csv",
        "kaggle_dataset": "budincsevity/szeged-weather",
        "preprocess": "szeged_weather",
        "target_column": "max_temperature",
        "feature_columns": [
            "min_temperature",
            "max_temperature",
            "avg_humidity",
            "avg_wind_speed",
            "avg_pressure",
            "month"
        ],
        "time_column": "date",
        "sequence_length": 12,
        "prediction_horizon": 1,
        "max_rows": 5000,
        "train_ratio": 0.7,
        "val_ratio": 0.15,
        "batch_size": 16,
        "shuffle": true,
        "feature_normalization": "minmax_-1_1"
    },
    "model": {
        "name": "rnn_baseline",
        "params": {
            "hidden_dim": 32,
            "layers": 2,
            "dropout": 0.0
        }
    },
    "training": {
        "epochs": 10,
        "optimizer": "adam",
        "lr": 1e-3,
        "weight_decay": 0.0,
        "clip_grad_norm": 1.0
    },
    "logging": {"level": "info", "save_config_snapshot": true}
}
