{
  "description": "Quantum Adversarial ML - full_experiment",
  "seed": 42,
  "experiment": "mnist",
  "device": "auto",
  
  "dataset": {
    "digits": [1, 9],
    "image_size": 16,
    "normalize": true,
    "root": "data",
    "download": true,
    "batch_size": 256
  },
  
  "model": {
    "type": "amplitude_quantum",
    "input_dim": 256,
    "hidden_dims": [128, 64],
    "n_modes": 8,
    "n_photons": 2,
    "n_layers": 2,
    "n_outputs": 2
  },
  
  "training": {
    "epochs": 100,
    "batch_size": 256,
    "learning_rate": 0.005,
    "optimizer": "adam"
  },
  
  "attack": {
    "method": "bim",
    "epsilon": 0.1,
    "num_iter": 10,
    "alpha": 0.01
  },
  
  "defense": {
    "epochs": 100,
    "learning_rate": 0.005,
    "attack_method": "bim",
    "epsilon": 0.1,
    "num_iter": 3,
    "mix_ratio": 0.5
  },
  
  "options": {
    "generate_figures": true,
    "save_model": true,
    "run_attack": true,
    "evaluate_robustness": true
  },
  
  "logging": {
    "level": "info"
  }
}
