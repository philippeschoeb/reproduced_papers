{
  "description": "Noise vs adversarial comparison for compressed amplitude-encoded classifier",
  "seed": 42,
  "experiment": "noise",
  "device": "auto",
  
  "dataset": {
    "digits": [1, 9],
    "image_size": 16,
    "normalize": true,
    "batch_size": 256
  },
  
  "model": {
    "type": "amplitude_quantum",
    "input_dim": 256,
    "n_outputs": 2,
    "hidden_dims": [128, 64],
    "n_modes": 12,
    "n_photons": 2,
    "n_layers": 2,
    "computation_space": "unbunched"
  },
  
  "noise": {
    "epsilon_values": [0.01, 0.03, 0.05, 0.1, 0.15, 0.2],
    "attack_method": "bim",
    "num_iter": 10
  },
  
  "options": {
    "generate_figures": true,
    "load_model": "outdir/train_amplitude_compressed/model.pt"
  },
  
  "logging": {
    "level": "info"
  }
}
